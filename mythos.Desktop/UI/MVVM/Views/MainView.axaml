<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:mythos.ViewModels"
             mc:Ignorable="d" d:DesignWidth="1500" d:DesignHeight="1000"
             x:Class="mythos.Views.MainView"
             x:DataType="vm:MainViewModel"
			 Background="Transparent">
	<Design.DataContext>
		<vm:MainViewModel/>
	</Design.DataContext>

	<StackPanel Orientation="Horizontal">
		<Grid ShowGridLines="True">

			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="310"/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="100"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="100"/>
			</Grid.RowDefinitions>

			<Image Source="/UI/MVVM/Assets/Icons/default_mainmenu_banner_focus.png"
					   HorizontalAlignment="Left"
					   VerticalAlignment="Center"
					   Width="400"
					   Height="100"			
					   Grid.Column="0"
					   Grid.Row="0"
					   Grid.ColumnSpan="1"/>

			<StackPanel Grid.Row="0" Grid.Column="1" 
						Grid.ColumnSpan="1"
						HorizontalAlignment="Stretch">
				<ContentControl Content="{Binding TopBar}"
								Grid.Row="0" Grid.Column="1" 
								Grid.ColumnSpan="1"
								HorizontalAlignment="Stretch"/>
			</StackPanel>
			
			<StackPanel Grid.Row="1"
						VerticalAlignment="Stretch">
				<ContentControl Content="{Binding SideBar}"
								Grid.RowSpan="1" Grid.Row="1"/>
			</StackPanel>

			<StackPanel Grid.Row="2" Grid.Column="0"
						VerticalAlignment="Stretch"
						HorizontalAlignment="Stretch"
						Background="#1a1a1a">
			</StackPanel>
		</Grid>
	</StackPanel>
</UserControl>
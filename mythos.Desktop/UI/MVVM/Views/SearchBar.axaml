<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="2000" d:DesignHeight="100"
             xmlns:vm="clr-namespace:mythos.Desktop.UI.MVVM.ViewModels"
             x:Class="mythos.Desktop.UI.MVVM.Views.SearchBar"
			 x:DataType="vm:SearchBarViewModel">
	<UserControl.DataContext>
		<vm:SearchBarViewModel/>
	</UserControl.DataContext>
	
	<!-- is used to display the search bar -->
	
	<StackPanel
		Orientation="Horizontal" 
		HorizontalAlignment="Left">
		
		<Canvas>
				<Image Source="\UI\MVVM\Assets\SearchBar\btn_textinput_hover.png"
					Height="100" Stretch="Fill"/>
		</Canvas>

		<TextBox Watermark="Search Here"
				 	FontFamily="/UI/MVVM/Fonts/#Minecraft Ten"
					Height="50"
					Width="{Binding MaxWidth}"
					MaxWidth="{Binding MaxWidth}"
					FontSize="50"
					Margin="15,0,0,5"
					VerticalAlignment="Center"
					BorderBrush="Transparent"
					BorderThickness="0"
					Background="Transparent"
					AcceptsTab="False"
					Grid.Column="1" Classes="TextBox.C1"/>
				

		<Image Source="\UI\MVVM\Assets\SearchBar\btn_textinput_hover56445.png"
			   Height="100" Width="20" VerticalAlignment="Center" Stretch="Fill"
			   Margin="0,0,0,0"/>
	</StackPanel>

</UserControl>
<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="mythos.Desktop.UI.MVVM.Views.SettingsPage"
			 xmlns:vm="clr-namespace:mythos.Desktop.UI.MVVM.ViewModels"
			 xmlns:asyncImageLoader="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
			 x:DataType="vm:SettingsPageViewModel"
			 Background="#33302A">
	<UserControl.DataContext>
		<vm:SettingsPageViewModel/>
	</UserControl.DataContext>

	<UserControl.Styles>
		<Style Selector="Label.A1">
			<Setter Property="Template">
				<ControlTemplate>
					<Border
						Width="{Binding Path=$parent.Bounds.Width}"
						Height="60"
						Margin="0,10,0,0"
						Background="Transparent"
						CornerRadius="5"
						BorderThickness="3"
						BorderBrush="Transparent"
						HorizontalAlignment="Center"
						VerticalAlignment="Top">

						<Grid Margin="6,0,0,0">
							<Label
								Foreground="Black"
								FontSize="20"
								Margin="0,4,3,0"
								Content="{TemplateBinding Property=Content}"
								HorizontalAlignment="Left"
								VerticalAlignment="Center"
								FontFamily="/UI/MVVM/Fonts/#Minecraft"
								FontWeight="Bold">
							</Label>

							<CheckBox HorizontalAlignment="Right"
									  Margin="0,0,15,0"
									  Classes="A2"/>
						</Grid>
						<Border.Background>
						</Border.Background>
					</Border>
				</ControlTemplate>
			</Setter>
		</Style>
		<Style Selector="CheckBox.A2">
			<Setter Property="Template">
				<ControlTemplate>
					<Border Height="52"
							Width="125">
						<Border.Background>
							<ImageBrush Source="\UI\MVVM\Assets\Buttons\OnAndOffSwitch\OffSwitch1.png"
										Stretch="Uniform"/>
						</Border.Background>
					</Border>
				</ControlTemplate>
			</Setter>
		</Style>
		<Style Selector="CheckBox.A2:checked /template/ Border">
			<Setter Property="Background">
				<ImageBrush Source="\UI\MVVM\Assets\Buttons\OnAndOffSwitch\OnSwitch1.png"
							Stretch="Uniform"/>
			</Setter>
		</Style>
	</UserControl.Styles>
	<Grid>

		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="32"/>
		</Grid.ColumnDefinitions>
		
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="34"/>
		</Grid.RowDefinitions>

		<Canvas Grid.Column="0"
				Grid.Row="0">
			<Canvas.Background>
				<ImageBrush Source="\UI\MVVM\Assets\Background\slot_focus_gold.png"
							AlignmentX="Left"
							AlignmentY="Top"
							Stretch="None"/>
			</Canvas.Background>
		</Canvas>

		<Canvas Grid.Column="0"
				Grid.Row="1">
			<Canvas.Background>

				<ImageBrush Source="\UI\MVVM\Assets\Background\slot_focus_gold_bottom.png"
							AlignmentX="Left"
							AlignmentY="Bottom"
							Stretch="None"/>
				
			</Canvas.Background>
		</Canvas>

		<Canvas Grid.Column="1"
				Grid.Row="1">
			<Canvas.Background>

				<ImageBrush Source="\UI\MVVM\Assets\Background\slot_focus_gold_bottom_right_corner.png"
							AlignmentX="Right"
							AlignmentY="Bottom"
							Stretch="None"/>

			</Canvas.Background>
		</Canvas>

		<Canvas Grid.Column="1"
				Grid.Row="0">
			<Canvas.Background>

				<ImageBrush Source="\UI\MVVM\Assets\Background\slot_focus_gold_right.png"
							AlignmentX="Right"
							AlignmentY="Top"
							Stretch="None"/>

			</Canvas.Background>
		</Canvas>

		<Grid Grid.Column="0"
			Grid.Row="0" Margin="20">

			<Border
				Background="#4C4638"
				BorderBrush="#2C2924"
				BorderThickness="5"
				CornerRadius="10"
				Margin="0,10,0,0"
				HorizontalAlignment="Center"
				VerticalAlignment="Top"
				Width="240"
				Height="70">
				<Label
					Foreground="White"
					FontSize="40"
					Margin="0,6,0,0"
					Content="Settings"
					HorizontalAlignment="Center"
					VerticalAlignment="Center"
					FontFamily="/UI/MVVM/Fonts/#Minecraft Ten"/>
			</Border>

			<ScrollViewer Margin="27,120,0,0">


				<!-- 
				ItemsSource="{Binding List} -->

				<ItemsRepeater>
					<ItemsRepeater.Layout>
						<StackLayout Orientation="Vertical"/>
					</ItemsRepeater.Layout>
					<Label Classes="A1"
						   Content="Full Screen On Start Up"/>
					<Label Classes="A1"
						   Content="Do not Display Name"/>
					<Label Classes="A1"
						   Content="Change Mod list to herzontal"/>
					<Label Classes="A1"
						   Content="Mute Sounds"/>
				</ItemsRepeater>

			</ScrollViewer>
		</Grid>
	</Grid>
</UserControl>
